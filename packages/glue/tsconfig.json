{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "rootDir": "src",
    "sourceMap": true,
    "allowJs": false,
    "isolatedModules": true,
    "noEmit": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "dist/*",
    "node_modules/*",
    "src/*.stories.tsx",
    "src/*.test.ts",
    "src/*.test.tsx"
  ]
}